source 'https://rubygems.org'
ruby '2.0.0'

# These are the rails defaults that I'll be using
gem 'rails', '4.1.6'
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'

# These are the additional gems for the learn-rails application
gem 'activerecord-tableless'
gem 'figaro'
gem 'gibbon'
gem 'google_drive'
gem 'high_voltage'
gem 'simple_form'
gem 'compass-rails'
gem 'zurb-foundation'

group :development do # Specifying a group for development ensures these won't be included in production
  gem 'better_errors'
  gem 'quiet_assets'
  gem 'rails_layout'
  gem 'sqlite3'
  gem 'spring'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
  gem 'thin'
end

